    format = "<span foreground='#b16286'></span><span foreground='#1d2021' background='#b16286'> %percentage_used</span><span foreground='#b16286' background='#1d2021'></span>"
}

wireless _first_ {
    format_up = "<span foreground='#458588'></span><span foreground='#1d2021' background='#458588'> %quality %essid</span><span foreground='#458588' background='#1d2021'></span>"
