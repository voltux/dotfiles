general {
        colors = true
        interval = 5
        color_bad = "#cc241d"
        color_good = "#98971a"
        color_degraded = "#d79921"
}

order += "volume master"
order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "disk /"
order += "load"
order += "memory"
order += "tztime local"

