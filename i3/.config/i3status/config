### General Settings 
general {
    colors = false
    interval = 1
    color_bad = "#cc241d"
    color_good = "#98971a"
    color_degraded = "#d79921"
    separator = ""
    markup = pango
}

order += "volume master"
order += "cpu_usage"
order += "memory"
order += "battery all"
order += "wireless _first_"
order += "ethernet _first_"
order += "tztime local"

### Widget Settings
cpu_usage {
    format = "<span foreground='#98971a'></span><span foreground='#1d2021' background='#98971a'> %usage</span><span foreground='#98971a' background='#1d2021'></span>"
}
