}

volume master {
    format = "<span foreground='#d79921'></span><span foreground='#1d2021' background='#d79921'> %volume</span><span foreground='#d79921' background='#1d2021'></span>"
    format_muted = "<span foreground='#98971a'></span><span background='#98971a'> muted</span><span foreground='#282828' background='#98971a'></span>"
    device = "default"
    mixer = "Master"
